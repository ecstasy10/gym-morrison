{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
    <style>

    </style>

    {{ parent() }}

    <div class="container card shadow-lg">
        <div class="row">
            <div class="col">
                <h1 class="mt-3">My Profile</h1>
            </div>
            <div class="col">
                <div class="text-right mt-3">
                    {% if app.user %}
                        <a type="button" class="btn btn-danger" href="{{ path('app_logout') }}">Logout</a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-3">
                <a href="/profile/{{ user.id }}">Profile Info</a> <br>
                <a href="/profile/{{ user.id }}">Edit profile Info</a> <br>
            </div>
            <div class="col-9">
                {{ user.email }}
                {{ user.roles[0] }}
                {{ user.dni }}
                {{ user.name }}
                {{ user.surname }}
                {{ user.sex }}
                {{ user.address }}
                {{ user.phone }}
                {{ user.birthdate | date }}
            </div>
        </div>
    </div>





{% endblock %}
