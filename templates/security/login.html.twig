{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container">
    <div class="card shadow-lg border-0 rounded-lg mx-auto mt-5 mb-5 p-5" style="width: 25rem">
        <div class="text-center">
            <h1 class="mt-4 mb-4">Log in <i class="fas fa-user"></i></h1>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}
                <div class="row">
                    <div class="col-sm-1 pt-2">
                        <i class="fas fa-envelope"></i>
                    </div>
                    <div class="col">
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control border-top-0 border-right-0 border-left-0 rounded-0" placeholder="Email" required autofocus>
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-sm-1 pt-2">
                        <i class="fas fa-key"></i>
                    </div>
                    <div class="col">
                        <input type="password" name="password" id="inputPassword" class="form-control border-top-0 border-right-0 border-left-0 rounded-0 mb-1" placeholder="Password" required>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
                 #}

                <p class="mt-3 small">You still don't have an account? <a href="{{ path('register') }}">Register</a></p>

                    <div class="checkbox mb-5 mt-2">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>


                <button class="btn btn-lg btn-primary" type="submit">
                    Sign in
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
